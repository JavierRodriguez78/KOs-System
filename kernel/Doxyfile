CREATE_SUBDIRS         = NO

# Input
INPUT                  = include \
                         src \
                         application
FILE_PATTERNS          = *.h \
                         *.hpp \
                         *.c \
                         *.cpp
RECURSIVE              = YES
EXCLUDE                = cmake \
                         boot \
                         disk

# Parsing/Extraction
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_METHODS  = YES
JAVADOC_AUTOBRIEF      = YES
QT_AUTOBRIEF           = YES
MULTILINE_CPP_IS_BRIEF = YES

# Build
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = .
STRIP_CODE_COMMENTS    = YES

# Warnings
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
VERBATIM_HEADERS       = YES

# HTML output
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_DYNAMIC_SECTIONS  = YES
GENERATE_TREEVIEW      = YES

# LaTeX/PDF
GENERATE_LATEX         = NO

# Dot/Graphs (optional, requires graphviz)
